
import sys
import database
import pandas as pd
from PyQt5.QtWidgets import (
    QApplication, QMainWindow, QWidget, QLabel, QPushButton, QVBoxLayout, QHBoxLayout, QFormLayout,
    QLineEdit, QStackedWidget, QTableWidget,QDialog ,QTableWidgetItem,QHeaderView, QComboBox, QMessageBox, QFileDialog
)
from PyQt5.QtGui import QFont, QIntValidator
from PyQt5.QtCore import Qt, QTimer
from PyQt5.QtGui import QFont


class InventoryApp(QMainWindow):
    def __init__(self):
        super().__init__()
        self.setWindowTitle("STOCK MANAGER")
        self.setGeometry(100, 100, 2600, 1400)
        self.selected_barcode = None
           # ‚úÖ Ïó¨Í∏∞ÏÑú Ï†ÑÏ≤¥ Ïä§ÌÉÄÏùºÏãúÌä∏ Ìïú Î≤àÏóê Ï†ÅÏö©
        self.setStyleSheet("""
            QWidget {
                background-color: #F9FAFB;
                font-family: SamsungOne;
                color: #333333;
            }

            QPushButton {
                background-color: #2D9CDB;
                color: white;
                border: none;
                border-radius: 6px;
                font-weight: bold;
                font-size: 13pt;
            }

            QPushButton:hover {
                background-color: #1B7DBF;
            }

            QLineEdit, QComboBox {
                background-color: white;
                border: 1px solid #ccc;
                border-radius: 6px;
                padding: 8px;
                font-size: 10pt;
            }

            QLabel {
